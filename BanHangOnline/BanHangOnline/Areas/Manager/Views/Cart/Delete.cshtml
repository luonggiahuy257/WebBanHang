@model BanHangOnline.ViewModels.CartViewModelCheckOut

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper-scroll">
    <!-- Content wrapper start -->
    <div class="content-wrapper">
        <!-- Row start -->
        <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Delete">
                            <div class="table-responsive">
                                <table id="copy-print-csv" class="table v-middle">
                                    <thead>
                                        <tr>
                                            <th> @Html.DisplayNameFor(model => model.LastName)</th>
                                            <th> @Html.DisplayNameFor(model => model.PhoneNumber)</th>
                                            <th> @Html.DisplayNameFor(model => model.Contents)</th>
                                            <th> @Html.DisplayNameFor(model => model.OrderStatusId)</th>
                                            <th> @Html.DisplayNameFor(model => model.Quantity)</th>
                                            <th> @Html.DisplayNameFor(model => model.Email)</th>
                                            <th> @Html.DisplayNameFor(model => model.CreatedAt)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.LastName)
                                            </td>
                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.PhoneNumber)
                                            </td>
                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.Contents)
                                            </td>
                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.OrderStatusId)
                                            </td>
                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.Quantity)
                                            </td>
                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.Email)
                                            </td>
                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.CreatedAt)
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-md-6 text-start">
                                    <input value="Trở lại" type="submit" class="btn btn-primary mt-3 ml-2" asp-action="Index">
                                </div>
                                <div class="col-md-6 text-end">
                                    <input type="submit" value="Xóa" class="btn btn-primary mt-3 mr-2" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row end -->
    </div>
</div>