@model BanHangOnline.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<!-- Content wrapper scroll start -->
<div class="content-wrapper-scroll">
    <!-- Content wrapper start -->
    <div class="content-wrapper">
        <!-- Row start -->
        <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Thêm danh mục</div>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <div>
                                <form enctype="multipart/form-data" asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <h6 class="h-0 m-0">&nbsp;</h6>
                                    <div class="row gutters">
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input type="file" class="filetype" onchange="previewMultiple(event)" id="addFile"  data-iconname="glyphicon-inbox" name="postedFiles" accept=".png,.jpg,.jpeg,.gif" multiple/>
                                               <div class="media-box" id='preview'>
                                                    @*<img  class="media-avatar" style="max-width:100px; max-height:100px; margin-top:10px; margin-right:10px">*@
                                                </div>
                                                <div class="field-placeholder">Chọn hình ảnh <span class="text-danger">*</span></div>

                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input asp-for="ProductName" class="form-control" />
                                                <span asp-validation-for="ProductName" class="text-danger"></span>
                                                <div class="field-placeholder">Tên sản phẩm</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input asp-for="SKU" class="form-control" />
                                                <span asp-validation-for="SKU" class="text-danger"></span>
                                                <div class="field-placeholder">Mã SKU (Nếu có)</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input asp-for="ManufacturerId" class="form-control" />
                                                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                                                <div class="field-placeholder">Nhà sản xuất</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input asp-for="UnitTypeId" class="form-control" />
                                                <span asp-validation-for="UnitTypeId" class="text-danger"></span>
                                                <div class="field-placeholder">Loại đơn vị</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input asp-for="TaxRateId" class="form-control" />
                                                <span asp-validation-for="TaxRateId" class="text-danger"></span>
                                                <div class="field-placeholder">Thuế suất</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input asp-for="SalePrice" class="form-control" />
                                                <span asp-validation-for="SalePrice" class="text-danger"></span>
                                                <div class="field-placeholder">Giá bán</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input asp-for="RetailPrice" class="form-control" />
                                                <span asp-validation-for="RetailPrice" class="text-danger"></span>
                                                <div class="field-placeholder">Giá bán lẽ</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input asp-for="WarehouseId" class="form-control" />
                                                <span asp-validation-for="WarehouseId" class="text-danger"></span>
                                                <div class="field-placeholder">Nhà cung cấp (kho)</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input asp-for="ProductTypeId" class="form-control" />
                                                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                                                <div class="field-placeholder">Loại sản phẩm</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <input asp-for="QuantityInStock" class="form-control" />
                                                <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                                                <div class="field-placeholder">Số lượng sản phẩm</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper text-start">
                                                <input type="checkbox" style=" width:20px;margin-left:12px" asp-for="ShowOnHomePage" />
                                                <div class="field-placeholder">Hiển thị trang chủ</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper text-start">
                                                <input type="checkbox" style=" width:20px;margin-left:12px" asp-for="ShowOnSalePage" />
                                                <div class="field-placeholder">Hiển thị trang sale</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper text-start">
                                                <input type="checkbox" style=" width:20px;margin-left:12px" asp-for="IsGroup" />
                                                <div class="field-placeholder">Sản phẩm đặt biệt</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper text-start">
                                                <input type="checkbox" style=" width:20px;margin-left:12px" asp-for="OwenSale" />
                                                <div class="field-placeholder">Sản phẩm được giảm giá</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                            <div class="field-wrapper text-start">
                                                <input type="checkbox" style=" width:20px;margin-left:12px" asp-for="Published" checked />
                                                <div class="field-placeholder">Trạng thái hoạt động</div>
                                            </div>
                                        </div>
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <textarea asp-for="ShortDescription" class="form-control" style="height:150px"></textarea>
                                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                                <div class="field-placeholder">Mô tả ngắn danh mục</div>
                                            </div>
                                        </div>

                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="field-wrapper">
                                                <textarea asp-for="Description" class="form-control" style="height:150px"></textarea>
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                                <div class="field-placeholder">Mô tả chi tiết</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 text-start">
                                            <input value="Trở lại" type="submit" class="btn btn-primary mt-3 ml-2" asp-action="Index">
                                        </div>
                                        <div class="col-md-6 text-end">
                                            <input type="submit" value="Create" class="btn btn-primary mt-3 mr-2" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row end -->
        </div>
        <!-- Content wrapper end -->
    </div>
</div>
<!-- Content wrapper scroll end -->


<script>

function previewMultiple(event){
        var saida = document.getElementById("addFile");
        var quantos = saida.files.length;
        for(i = 0; i < quantos; i++){
            var urls = URL.createObjectURL(event.target.files[i]);
            document.getElementById("preview").innerHTML +=  '<img  class="media-avatar" ' + urls + ' style = "max-width:100px; max-height:100px; margin-top:10px; margin-right:10px" >';
        }
    }
</script>
