@using BanHangOnline.Areas.Manager.Models
@model List<WebBannerGropDropdown>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
    WebBannerGropDropdown abc = ViewBag.abc;
}

<!-- Content wrapper scroll start -->
<div class="content-wrapper-scroll">
    <!-- Content wrapper start -->
    <div class="content-wrapper">
        <div class="col-12 mb-2">
            <a class="btn btn-primary" href="@Url.Action("Create")">Create New</a>
        </div>
        <!-- Row start -->
        <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="copy-print-csv" class="table v-middle">
                                <thead>
                                    <tr>
                                        <th>Hình ảnh</th>
                                        <th>Tên hình ảnh</th>
                                        <th>Nhóm hình ảnh</th>
                                        <th>Lựa chọn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="media-box">
                                                    <img src="@item.BannerImage" class="media-avatar" alt="@item.BannerAlt">
                                                </div>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.BannerTitle)</td>

                                            @if(abc != null){
                                                @foreach (var bannergroup in abc.WebBannerGroup)
                                                {
                                                    if (bannergroup.BannerGroupID == item.BannerGroupId)
                                                    {
                                                       <td>@Html.DisplayFor(modelItem => bannergroup.BannerGroupName)</td>
                                                    }
                                                }
                                            }
                                            else
                                            {
                                                 <td></td>
                                            }
                                            <td>
                                                <div class="actions">
                                                    <a href="@Url.Action("Edit", new { id = @item.BannerId})" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
                                                        <i class="icon-edit1 text-info"></i>
                                                    </a>
                                                    <a href="@Url.Action("Details", new { id = @item.BannerId})" data-toggle="tooltip" data-placement="top" title="" data-original-title="Detail">
                                                        <i class="icon-menu text-info"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = @item.BannerId})" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete">
                                                        <i class="icon-x-circle text-danger"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row end -->
    </div>
</div>
<!-- Content wrapper scroll end -->