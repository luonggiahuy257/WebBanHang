@model BanHangOnline.ViewModels.WebBannerGroupViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper-scroll">
    <!-- Content wrapper start -->
    <div class="content-wrapper">
        <!-- Row start -->
        <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sửa nhóm banner</div>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <form asp-controller="WebBannerGroup" asp-action="Edit" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="BannerGroupID" />
                                <h6 class="h-0 m-0">&nbsp;</h6>
                                <div class="row gutters">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                        <div class="field-wrapper">

                                            <input asp-for="BannerGroupName" class="form-control" />
                                            <span asp-validation-for="BannerGroupName" class="text-danger"></span>
                                            <div class="field-placeholder">Tên nhóm banner</div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                        <div class="field-wrapper text-start">
                                            <input style=" width:20px;margin-left:12px" asp-for="BannerGroupEnable" />
                                            <span asp-validation-for="BannerGroupName" class="text-danger"></span>
                                            <div class="field-placeholder">Trạng thái hoạt động</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 text-start">
                                        <input value="Trở lại" type="submit" class="btn btn-primary mt-3 ml-2" asp-controller="WebBannerGroup" asp-action="Index">
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <input type="submit" value="Hoàn Tất" class="btn btn-primary mt-3 mr-2" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row end -->
        </div>
        <!-- Content wrapper end -->
    </div>
</div>

@section scripts{

    <!-- Rating JS -->
    <script src="~/Content/Admin/vendor/rating/raty.js"></script>
    <script src="~/Content/Admin/vendor/rating/raty-custom.js"></script>

    <!-- Steps wizard JS -->
    <script src="~/Content/Admin/vendor/wizard/jquery.steps.min.js"></script>
    <script src="~/Content/Admin/vendor/wizard/jquery.steps.custom.js"></script>

    <!-- Summernote JS -->
    <script src="~/Content/Admin/vendor/summernote/summernote-bs4.js"></script>

    <!-- Bootstrap Select JS -->
    <script src="~/Content/Admin/vendor/bs-select/bs-select.min.js"></script>
    <script src="~/Content/Admin/vendor/bs-select/bs-select-custom.js"></script>

    <!-- Dropzone JS -->
    <script src="~/Content/Admin/vendor/dropzone/dropzone.min.js"></script>

    <!-- Input Tags JS -->
    <script src="~/Content/Admin/vendor/input-tags/tagsinput.min.js"></script>
    <script src="~/Content/Admin/vendor/input-tags/typeahead.js"></script>
    <script src="~/Content/Admin/vendor/input-tags/tagsinput-custom.js"></script>

    <!-- Main Js Required -->
    <script src="~/Content/Admin/js/main.js"></script>

    <script>

        // Summernote
        $(document).ready(function() {
            $('.summernote').summernote({
                height: 120,
                tabsize: 2,
                focus: true,
                toolbar: [
                    ['font', ['bold', 'underline', 'clear']],
                    ['para', ['ul', 'ol']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']],
                ]
            });
        });

    </script>
    }
