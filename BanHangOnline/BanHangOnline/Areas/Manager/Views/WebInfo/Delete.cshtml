@model BanHangOnline.ViewModels.WebInfoViewModels

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper-scroll">
    <!-- Content wrapper start -->
    <div class="content-wrapper">
        <!-- Row start -->
        <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Delete">
                            <div class="table-responsive">
                                <table id="copy-print-csv" class="table v-middle">
                                    <thead>
                                        <tr>
                                            <th>Đường dẫn file</th>
                                            <th>Tên công ty</th>
                                            <th>Câu slogone </th>
                                            <th>Địa chỉ website</th>
                                            <th>Nội dung chi tiết công ty</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="col-sm-10">
                                                <div class="media-box">
                                                    <img src="@Model.ImageLogo" class="media-avatar" alt="@Model.TitleLogo">
                                                </div>
                                            </td>
                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.CompanyTitle)
                                            </td>

                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.Slogone)
                                            </td>
                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.Website)
                                            </td>
                                            <td class="col-sm-10">
                                                @Html.DisplayFor(model => model.Description)
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-md-6 text-start">
                                    <input value="Trở lại" type="submit" class="btn btn-primary mt-3 ml-2" asp-action="Index">
                                </div>
                                <div class="col-md-6 text-end">
                                    <input type="submit" value="Xóa" class="btn btn-primary mt-3 mr-2" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row end -->
    </div>
</div>
