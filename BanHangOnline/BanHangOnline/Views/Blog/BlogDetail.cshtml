@using BanHangOnline.Models
@model DetailListPost

@{
    ViewData["Title"] = "Chi tiết tin tức";
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area breadcrumbs_bg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/Home">Trang chủ</a></li>
                        <li>@Model.PostTitle</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--blog body area start-->
<div class="blog_details">
    <div class="container">
        <div class="row">
            @await Html.PartialAsync("_SearchWebPost")
            <div class="col-lg-9 col-md-12">
                <!--blog grid area start-->
                <div class="blog_wrapper blog_wrapper_details">
                    <article class="single_blog">
                        <figure>
                            <div class="post_header">
                                <h3 class="post_title">@Model.PostTitle</h3>
                                <div class="blog_meta">
                                    @if (@Model.PostUserName != null)
                                    {
                                        <span>Đăng bởi:<a href="#">@Model.PostUserName</a> / ngày:<a href="#">@Model.CreatedAt</a></span>
                                    }
                                </div>
                            </div>
                            <div class="blog_d_thumb">
                                <img src="@Model.PostImage" alt="@Model.PostTitle">
                            </div>
                            <figcaption class="blog_content">
                                <div class="post_content">
                                   <p>@Model.PostContent</p>
                                </div>
                            </figcaption>
                        </figure>
                    </article>
                    <div class="related_posts">
                        <h3>Tin tức mới nhất</h3>
                        <div class="row">
                            @foreach (var item in Model.WebPosts)
                           {
                              <div class="col-lg-4 col-md-4 col-sm-6">
                                <article class="single_related">
                                    <figure>
                                        <div class="related_thumb">
                                            <a asp-action="BlogDetail" asp-controller="Blog" asp-route-BlogDetailUrl="@item.PostTitleURL"><img src="@item.PostImage" alt="@item.PostTitle"></a>
                                        </div>
                                        <figcaption class="related_content">
                                            <h4><a asp-action="BlogDetail" asp-controller="Blog" asp-route-BlogDetailUrl="@item.PostTitleURL">@item.PostTitle</a></h4>
                                            <div class="blog_meta">
                                                @if(@item.PostUserName != null){
                                                      <span class="author">Đăng bởi : <a href="#">@item.PostUserName</a> / </span>
                                                <span class="meta_date">@item.CreatedAt</span>    
                                                    }
                                            </div>
                                        </figcaption>
                                    </figure>
                                </article>
                            </div> 
                           }
                        </div>
                    </div>
